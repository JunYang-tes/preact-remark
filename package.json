{
  "version": "2.1.0",
  "name": "preact-remark",
  "description": "Renders Markdown as Preact components",
  "author": "Christian Murphy <christian.murphy.42@gmail.com>",
  "license": "MIT",
  "repository": "remarkjs/react-remark",
  "bugs": "https://github.com/remarkjs/react-remark/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "main": "dist/index.js",
  "module": "dist/preact-remark.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "preact": ">=10"
  },
  "dependencies": {
    "mdast-util-to-hast": "^13.2.0",
    "rehype-react": "^6.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "unified": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@chromatic-com/storybook": "^3.2.6",
    "@preact/preset-vite": "^2.10.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.6",
    "@storybook/preact": "^8.6.12",
    "@storybook/preact-vite": "^8.6.12",
    "@storybook/preact-webpack5": "^8.6.12",
    "@testing-library/jest-dom": "^5.0.0",
    "husky": "^7.0.0",
    "katex": "^0.13.0",
    "pinst": "^2.0.0",
    "preact": "^10.0.0",
    "rehype-katex": "^5.0.0",
    "rehype-raw": "^5.0.0",
    "rehype-sanitize": "^4.0.0",
    "remark-gfm": "^1.0.0",
    "remark-math": "^4.0.0",
    "storybook": "^8.6.12",
    "typescript": "~5.7.2",
    "vite": "^6.3.1"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":preserveSemverRanges"
    ]
  }
}
